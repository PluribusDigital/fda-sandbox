{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Open FDA Drug Explorer"
    },
    "paths": {
        "/api/v1/drugs": {
            "get": {
                "description": "Gets `Drug` objects based on  [Open FDA](https://open.fda.gov/) and related data.\n",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search query string to support typeahead search",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "results",
                            "type": "object",
                            "properties": {
                                "meta": {
                                    "result_count": "number"
                                },
                                "results": {
                                    "title": "ArrayOfResults",
                                    "type": "array",
                                    "items": {
                                        "title": "Drug",
                                        "type": "object",
                                        "properties": {
                                            "product_ndc": {
                                                "type": "string"
                                            },
                                            "proprietary_name": {
                                                "type": "string"
                                            },
                                            "nonproprietary_name": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}